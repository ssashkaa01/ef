<Window x:Class="WpfAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="448.84">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="textResult" Margin="20" TextWrapping="Wrap" Grid.Row="1"/>
        <TextBox Name="textMsg" HorizontalAlignment="Left" Height="27" Margin="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
        <Button Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="290,10,0,0" VerticalAlignment="Top" Width="132" Height="27" Click="BtnSend_Click"/>

    </Grid>
</Window>
