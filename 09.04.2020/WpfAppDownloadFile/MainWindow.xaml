<Window x:Class="WpfAppDownloadFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDownloadFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBox Name="textUrl" HorizontalAlignment="Left" Height="23" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="485"/>
        <Button Name="btnDownload" Content="Download" HorizontalAlignment="Left" Margin="541,20,0,0" VerticalAlignment="Top" Width="232" Height="23" Click="BtnDownload_Click"/>
        <ListBox Name="listDownloads" Margin="20" Grid.Row="2"/>
        <Button Name="btnSelectFolder" Content="Select folder" HorizontalAlignment="Left" Margin="541,10,0,0" VerticalAlignment="Top" Width="232" Height="23" Grid.Row="1" Click="BtnSelectFolder_Click"/>
        <Label Name="labelPathFolderDownloads" Content="Not selected" HorizontalAlignment="Left" Margin="20,7,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-0.241,0.519"/>

    </Grid>
</Window>
